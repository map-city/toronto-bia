{
	"version": 8,
	"name": "osm",
	"metadata": {
		"maputnik:renderer": "mbgljs"
	},
	"glyphs": "https://mapcity.io/toronto-bia/assets/fonts/{fontstack}/{range}.pbf",
	"sprite": "https://mapcity.io/toronto-bia/assets/sprites/sprites",
	"sources": {
		"osm": {
			"type": "vector",
			"url": "https://vector.openstreetmap.org/shortbread_v1/tilejson.json"
		},
		"toronto": {
			"type": "vector",
			"tiles": ["https://mapcity.io/tiles/toronto/{z}/{x}/{y}.pbf"]
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "hsl(0, 0%, 95%)"
			}
		},
		{
			"id": "propertyboundaries",
			"source": "toronto",
			"source-layer": "propertyboundaries",
			"type": "fill",
			"paint": {
			  "fill-color": [
					"case",
					["in", ["get", "FEATURE_TYPE"], "CONDO"], "hsl(24, 32%, 84%)",
					["in", ["get", "FEATURE_TYPE"], "CORRIDOR"], "hsl(210, 20%, 90%)",
					["in", ["get", "FEATURE_TYPE"], "RESERVE"], "hsl(24, 32%, 88%)",
					["in", ["get", "FEATURE_TYPE"], "COMMON"], "hsl(24, 32%, 92%)",
					"hsl(0, 0%, 95%)"
				],
			  "fill-opacity": 1
			}
		},
		{
			"id": "propertyboundaries-line",
			"source": "toronto",
			"source-layer": "propertyboundaries",
			"type": "line",
			"paint": {
				"line-color": "hsl(0, 0%, 70%)",
				"line-width": ["interpolate", ["linear"], ["zoom"], 13, 0, 15, 0.2, 16, 1],
				"line-opacity": ["interpolate", ["linear"], ["zoom"], 14, 0, 15, 1]
			}
		},
		{
			"id": "roads",
			"source": "toronto",
			"source-layer": "roads",
			"type": "line",
			"paint": {
			  "line-color": "hsl(0, 0%, 100%)",
			  "line-width": ["interpolate", ["linear"], ["zoom"], 15, 0, 16, 2.5]
			},
			"minzoom": 15
		},
		{
			"id": "roads-label",
			"source": "toronto",
			"source-layer": "roads",
			"type": "symbol",
			"layout": {
				"text-field": "{LINEAR_NAME_FULL}",
				"text-transform": "uppercase",
				"text-rotation-alignment": "map",
				"text-font": [ "montserrat-regular" ],
				"text-letter-spacing": 0.2,
				"symbol-placement": "line",
				"symbol-spacing": 250,
				"text-anchor": "center",
				"text-size": [ "interpolate", [ "exponential", 1.5 ], [ "zoom" ], 10, 0, 20, 30 ]
			},
			"paint": {
				"text-color": "hsl(0, 0%, 30%)",
				"text-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ]
			},
			"minzoom": 15
		}
	]
}
