{
	"version": 8,
	"name": "osm",
	"metadata": {
		"maputnik:renderer": "mbgljs",
		"attribution": "MappedIn basemap v2"
	},
	"glyphs": "https://osm-studio.github.io/assets/fonts/{fontstack}/{range}.pbf",
	"sprite": "https://osm-studio.github.io/assets/sprites/sprites",
	"sources": {
        "toronto_centreline": {
			"type": "vector",
			"tiles": ["http://localhost:8000/data/toronto_centreline/{z}/{x}/{y}.pbf"]
		},
		"osm": {
			"type": "vector",
			"url": "https://vector.openstreetmap.org/shortbread_v1/tilejson.json"
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "hsl(0, 0%, 95%)"
			}
		},
        {
			"source": "osm",
			"id": "land-natural",
			"type": "fill",
			"source-layer": "land",
			"filter": [ "in", "kind", "brownfield", "farmland", "farmyard", "greenfield", "greenhouse_horticulture", "orchard", "plant_nursery", "vineyard", "park", "village_green", "recreation_ground", "allotments", "garden", "miniature_golf", "playground", "golf_course", "forest", "grass", "grassland", "meadow", "wet_meadow", "heath", "scrub", "beach", "sand", "bog", "marsh", "string_bog", "swamp" ],
			"paint": {
			  "fill-color": "hsl(115, 61%, 80%)",
			  "fill-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 12, 0, 13, 1 ]
			},
            "minzoom": 12
		},
        {
			"source": "osm",
			"id": "water",
			"type": "fill",
			"source-layer": "water_polygons",
			"filter": [ "in", "kind", "water", "river", "reservoir", "basin", "dock" ],
			"paint": {
				"fill-color": "hsl(200, 100%, 80%)"
			}
		},
		{
			"source": "osm",
			"id": "waterway",
			"type": "line",
			"source-layer": "water_lines",
			"filter": [ "all", [ "in", "kind", "river" ], [ "!=", "tunnel", true ], [ "!=", "bridge", true ] ],
			"paint": {
				"line-color": "hsl(200, 100%, 80%)",
				"line-width": 1,
				"line-opacity": { "stops": [ [ 5, 0 ], [ 6, 1 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "streets-osm",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary", "residential" ],
			"paint": {
				"line-color": "hsl(214, 33%, 90%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 1, 20, 152 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 1, 16, 0 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
            "maxzoom": 16
		},
        {
			"source": "toronto_centreline",
			"id": "streets-centreline",
			"type": "line",
			"source-layer": "toronto_centreline",
            "filter": [ "in", "FEATURE_CODE_DESC", "Expressway", "Expressway Ramp", "Major Arterial", "Major Arterial Ramp", "Minor Arterial", "Minor Arterial Ramp", "Collector", "Collector Ramp", "Local", "Other", "Other Ramp" ],
			"paint": {
				"line-color": "hsl(210, 89%, 50%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 1, 20, 152 ],
				"line-opacity": 1
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
            "minzoom": 15
		}
	]
}
