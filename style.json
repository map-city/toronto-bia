{
	"version": 8,
	"name": "osm",
	"metadata": {
		"maputnik:renderer": "mbgljs"
	},
	"glyphs": "http://localhost:8000/assets/fonts/{fontstack}/{range}.pbf",
	"sources": {
		"osm": {
			"type": "vector",
			"url": "https://vector.openstreetmap.org/shortbread_v1/tilejson.json"
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "hsl(33, 45%, 96%)"
			}
		},
		{
			"source": "osm",
			"id": "ocean",
			"type": "fill",
			"source-layer": "ocean",
			"paint": {
				"fill-color": "hsl(181, 45%, 80%)"
			}
		},
		{
			"source": "osm",
			"id": "water-polygons",
			"type": "fill",
			"source-layer": "water_polygons",
			"paint": {
				"fill-color": "hsl(181, 45%, 80%)",
				"fill-opacity": { "stops": [ [ 4, 0 ], [ 6, 1 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "street-minor",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "residential" ],
			"paint": {
				"line-color": "hsl(85, 48%, 100%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 150 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			}
		},
		{
			"source": "osm",
			"id": "street-major",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"paint": {
				"line-color": "hsl(85, 48%, 100%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 1, 20, 200 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			}
		},
		{
			"source": "osm",
			"id": "label-street",
			"type": "symbol",
			"source-layer": "street_labels",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary", "residential" ],
			"layout": {
				"text-field": "{name}",
				"text-transform": "uppercase",
				"text-font": [ "montserrat-regular" ],
				"text-letter-spacing": 0.2,
				"symbol-placement": "line",
				"symbol-spacing": [ "interpolate", [ "linear" ], [ "zoom" ], 12, 200, 20, 400 ],
				"text-anchor": "center",
				"text-size": [ "interpolate", [ "exponential", 1.5 ], [ "zoom" ], 10, 0, 20, 40 ]
			},
			"paint": {
				"text-color": "hsl(0, 0%, 40%)"
			}
		}
	]
}