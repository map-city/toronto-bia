{
	"version": 8,
	"name": "osm",
	"metadata": {
		"maputnik:renderer": "mbgljs"
	},
	"glyphs": "https://osm-studio.github.io/assets/fonts/{fontstack}/{range}.pbf",
	"sprite": "https://osm-studio.github.io/assets/sprites/sprites",
	"sources": {
		"toronto_grid_lines": {
			"type": "vector",
			"tiles": ["https://mapcity.io/toronto-bia/data/toronto_grid_lines/{z}/{x}/{y}.pbf"]
		},
		"toronto_grid_polygons": {
			"type": "vector",
			"tiles": ["https://mapcity.io/toronto-bia/data/toronto_grid_landuse/{z}/{x}/{y}.pbf"]
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "hsl(25, 20%, 85%)"
			}
		},
		{
			"source": "toronto_grid_landuse",
			"source-layer": "toronto_grid_landuse",
			"id": "landuse",
			"type": "fill",
			"paint": {
				"fill-color": "hsl(110, 60%, 80%)",
				"fill-opacity": 1
			}
		},
		{
			"source": "toronto_grid_lines",
			"source-layer": "toronto_grid_lines",
			"id": "highway-major-outline",
			"type": "line",
			"filter": [ "in", "highway", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"paint": {
				"line-color": "hsl(214, 33%, 35%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 15, 20, 166 ],
				"line-opacity": { "stops": [ [ 5, 0 ], [ 6, 1 ] ] }
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			}
		},
		{
			"source": "toronto_grid_lines",
			"source-layer": "toronto_grid_lines",
			"id": "highway-major",
			"type": "line",
			"filter": [ "in", "highway", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"paint": {
				"line-color": "hsl(214, 33%, 85%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 10, 20, 130 ],
				"line-opacity": { "stops": [ [ 5, 0 ], [ 6, 1 ] ] }
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			}
		}
	]
}
